<section class="content-header">
  <div class="row">
    <div class="col-md-3 col-md-offset-3">
      <h1><%= @order.user.first_name %>'s Order</h1>
    </div>
  </div>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">
            <%= @order.reference_number %>
          </h3>
          <div class="box-tools">
            <%= l(@order.created_at, format: :views) %>
          </div>
        </div><!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
            <tr>
              <td>#</td>
              <th>Product</th>
              <th>Price</th>
              <th>Quantity</th>
              <th class="left">SubTotal</th>
            </tr>
            </thead>
            <tbody class="cart">
            <% number=1 %>
            <% @order.order_products.each do |order| %>
                <tr>
                  <td><%= number %></td>
                  <td><%= order.product.name %></td>
                  <td><%= order.product.price %></td>
                  <td><%= order.quantity %></td>
                  <td><%= number_to_currency(order.product.price * order.quantity) %></td>
                </tr>
                <% number+=1 %>
            <% end %>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td><b>Total:</b></td>
              <td></td>
            </tr>
            </tbody>
          </table>
        </div><!-- /.box-body -->
        <% if @order.address %>
            <div class="form-horizontal">
              <div class="box-body">
                <div class="form-group">
                  <div class="col-md-2 control-label">
                    Address
                  </div>
                  <div class="col-sm-10">
                    <%= @order.address.get_address %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-2 control-label">
                    Phone number
                  </div>
                  <div class="col-sm-10">
                    <%= @order.address.phone_number %>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
        <!-- /.box-body -->
      </div>
    </div>
  </div>
</section>
