<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title">Role</h3>
    <div class="box-tools">
      <%= link_to '<i class="fa fa-arrow-left"></i> Back'.html_safe, roles_path, class: 'btn btn-xs btn-flat bg-gray' %>
    </div>
  </div>
  <!-- /.box-header -->
  <!-- form start -->
  <%= form_for(@role, html: {class: 'form-horizontal'}, validate: true) do |f| %>
      <div class="box-body">
        <div class="form-group">
          <%= f.label :name, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :key, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :key, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :description, class: 'col-sm-2 control-label' %>
          <div class="col-sm-10">
            <%= f.text_field :description, class: 'form-control' %>
          </div>
        </div>
      </div>
      <!-- /.box-body -->
      <div class="box-footer">
        <div class="col-sm-offset-2">
          <%= f.button 'Send', class: 'btn btn-primary' %>
        </div>
      </div>
  <% end %>
</div>
