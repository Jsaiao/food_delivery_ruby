<aside class="main-sidebar">
  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag 'user.png', class: 'img-circle' %>
      </div>
      <div class="pull-left info">
        <p>Alexander Pierce</p>
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>
    <!-- search form -->
    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search...">
              <span class="input-group-btn">
                <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
                </button>
              </span>
      </div>
    </form>
    <!-- /.search form -->
    <!-- sidebar menu: : style can be found in sidebar.less -->
    <ul class="sidebar-menu">
      <li class="header">Main Navigation</li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-shopping-cart"></i> <span>Carts</span> <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> Add Cart'.html_safe, new_cart_path %>
          </li>
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> View Carts'.html_safe, carts_path %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-th-list"></i> <span>Orders</span> <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> Place Order'.html_safe, new_order_path %>
          </li>
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> View Orders'.html_safe, orders_path %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-leaf"></i> <span>Food Dishes</span> <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> Add Food Dish'.html_safe, new_product_path %>
          </li>
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> View Dishes'.html_safe, products_path %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-map-marker"></i> <span>Restaurants</span> <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> Add Restaurant'.html_safe, new_restaurant_path %>
          </li>
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> View Restaurants'.html_safe, restaurants_path %>
          </li>
        </ul>
      </li>

      <li class="header">Access</li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-map-marker"></i> <span>Permissions</span> <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> Add Permission'.html_safe, 'javascript:;' %>
          </li>
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> View Permissions'.html_safe, 'javascript:;' %>
          </li>
        </ul>
      </li>
      <li class="treeview">
        <a href="#">
          <i class="fa fa-map-marker"></i> <span>Roles</span> <i class="fa fa-angle-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> Add Role'.html_safe, 'javascript:;' %>
          </li>
          <li>
            <%= link_to '<i class="fa fa-circle-o"></i> View Roles'.html_safe, 'javascript:;' %>
          </li>
        </ul>
      </li>
    </ul>
  </section>
  <!-- /.sidebar -->
</aside>
