<h2>Change Password</h2>

<%= form_for(@user, url: {action: :save_user_password}, validate: true, html: {class: 'form-horizontal'}, validate: true) do |f| %>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autofocus: true, placeholder: 'New password', id: 'Password', autocomplete: 'off' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, placeholder: 'Confirm new password', autocomplete: 'off' %>
    </div>

    <div class="actions">
      <%= f.submit "Update User" %>
    </div>
<% end %>

<%= link_to "Back", :back %>
