<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(@user, url: update_user_path(@user), html: {method: :put}, validate: true) do |f| %>
    <%#= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :first_name %><br/>
      <%= f.text_field :first_name%>
    </div>

    <div class="field">
      <%= f.label :last_name %><br/>
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :mother_last_name %><br/>
      <%= f.text_field :mother_last_name %>
    </div>

    <div>
      <%= f.fields_for :addresses do |address| %>
          <%= render '/shared/address_fields', f: address %>
      <% end %>
      <%= link_to_add_association "<i class='fa fa-plus'></i> Add Address".html_safe, f,
                                  :addresses, class: 'form-control',
                                  partial: '/shared/address_fields' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :role_id, class: 'col-md-3 control-label' %>
      <%= f.collection_select(:role_id, Role.all, :id, :name,
                              {prompt: 'Please select'}, {class: 'form-control'}) %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
<% end %>

<%= link_to "Back", :back %>