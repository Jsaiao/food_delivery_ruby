<section class="content-header">
  <h1>User</h1>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">User</h3>
      <div class="box-tools">
        <%= link_to '<i class="fa fa-arrow-left"></i> Back'.html_safe, user_registrations_path, class: 'btn btn-xs btn-flat bg-gray' %>
      </div>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <%= form_for(@user, url: update_user_path(@user), html: {method: :put, class: 'form-horizontal'}, validate: true) do |f| %>
        <div class="box-body">
          <div class="form-group">
            <%= f.label :username, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :username, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :email, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :email, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :first_name, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :first_name, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :last_name, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :last_name, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :mother_last_name, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.text_field :mother_last_name, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :role_id, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.collection_select(:role_id, Role.all, :id, :name,
                                      {prompt: 'Please select'}, {class: 'form-control'}) %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :restaurant_id, class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">
              <%= f.collection_select(:restaurant_id, Restaurant.all, :id, :name,
                                      {prompt: 'Please select'}, {class: 'form-control'}) %>
            </div>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
          <div class="col-sm-offset-2">
            <%= f.button 'Send', class: 'btn btn-primary' %>
          </div>
        </div>
    <% end %>
  </div>
</section>
