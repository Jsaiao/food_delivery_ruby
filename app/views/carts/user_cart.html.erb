<section class="content-header">
  <h1>Listing Carts</h1>
</section>
<section class="content">
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">
        Cart
      </h3>
      <div class="box-tools">
        <div class="input-group input-group-sm" style="width: 150px;">
          <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

          <div class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
          </div>
        </div>
      </div>
    </div><!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>#</th>
          <th>Product</th>
          <th>Price</th>
          <th class="center">Quantity</th>
          <th class="center">Subtotal</th>
        </tr>
        </thead>
        <tbody class="cart">
        <% number=1 %>
        <% @cart_products.each do |cart| %>
            <tr id="cart-product-<%= cart.id %>">
              <td><%= number %></td>
              <td><%= cart.product.name %></td>
              <td class="product-price"><%= number_to_currency(cart.product.price) %></td>
              <td class="center">
                <div class="inline-flex">
                  <button class="btn btn-flat btn-xs add-product" data-id="<%= cart.product.id %>">
                    <i class="fa fa-plus"></i>
                  </button>
                  <div class="quantity">
                    <%= cart.quantity %>
                  </div>
                  <button class="btn btn-flat btn-xs remove-product" data-id="<%= cart.product.id %>">
                    <i class="fa fa-minus"></i>
                  </button>
                  <%= link_to '<i class="fa fa-times"></i>'.html_safe, 'javascript:;',
                              class: 'btn btn-flat btn-xs bg-red delete-product', data: {id: cart.id} %>
                </div>
              </td>
              <td class="center subtotal"><%= number_to_currency(cart.product.price * cart.quantity) %></td>
            </tr>
            <% number+=1 %>
        <% end %>
        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td class="center"><b>Total:</b></td>
          <td class="center"></td>
        </tr>
        </tbody>
      </table>
    </div><!-- /.box-body -->
  </div>
  <%= link_to 'Place order', place_order_path, class:'btn btn-primary' %>
</section>

