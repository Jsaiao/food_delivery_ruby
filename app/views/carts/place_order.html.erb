<section class="content-header">
  <div class="row">
    <div class="col-md-3 col-md-offset-3">
      <h1>Place order</h1>
    </div>
  </div>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title">
            Order
          </h3>
          <div class="box-tools">
            <%= Time.now.to_formatted_s(:long) %>
          </div>
        </div><!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
            <tr>
              <td>#</td>
              <th>Product</th>
              <th>Price</th>
              <th>Quantity</th>
              <th class="left">SubTotal</th>
            </tr>
            </thead>
            <tbody class="cart">
            <% number=1 %>
            <% @cart_products.each do |cart| %>
                <tr>
                  <td><%= number %></td>
                  <td><%= cart.product.name %></td>
                  <td><%= cart.product.price %></td>
                  <td><%= cart.quantity %></td>
                  <td><%= number_to_currency(cart.product.price * cart.quantity) %></td>
                </tr>
                <% number+=1 %>
            <% end %>
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td><b>Total:</b></td>
              <td></td>
            </tr>
            </tbody>
          </table>
        </div><!-- /.box-body -->
        <%= form_for(@order, html: {class: 'form-horizontal'}) do |f| %>
            <div class="box-body">
              <div class="form-group">
                <%= f.label :address_id, class: 'col-sm-2 control-label' %>
                <div class="col-sm-10">
                  <%= f.collection_select(:address_id, current_user.addresses, :id, :get_address, {prompt: 'Please select an address'},
                                          {class: 'form-control'}) %>
                </div>
              </div>
            </div>
            </div>
            <!-- /.box-body -->
            <%= f.button 'Make order', class: 'btn btn-primary' %>
        <% end %>
        </div>
  </div>
</section>
