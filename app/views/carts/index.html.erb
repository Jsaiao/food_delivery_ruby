<section class="content-header">
  <h1>Listing Carts</h1>
</section>
<section class="content">
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">
        <%= link_to '<i class="fa fa-plus"></i> New'.html_safe, new_cart_path, class: 'btn btn-xs btn-flat bg-gray' %>
      </h3>
      <div class="box-tools">
        <div class="input-group input-group-sm" style="width: 150px;">
          <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

          <div class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
          </div>
        </div>
      </div>
    </div><!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <thead>
        <tr>
          <th style="width: 10px">#</th>
          <th>User</th>
          <th>Product</th>
          <th>Quantity</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @carts.each do |cart| %>
            <tr>
              <td><%= %></td>
              <td><%= cart.user %></td>
              <td><%= cart.product %></td>
              <td><%= cart.quantity %></td>
              <td class="actions">
                <div>
                  <%= link_to '<i class="fa fa-search"></i>'.html_safe, cart, class: 'btn btn-flat btn-xs bg-green' %>
                  <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_cart_path(cart), class: 'btn btn-flat btn-xs bg-blue' %>
                  <%= link_to '<i class="fa fa-trash"></i>'.html_safe, cart, method: :delete,
                              data: {confirm: 'Are you sure?'}, class: 'btn btn-flat btn-xs bg-red' %>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div><!-- /.box-body -->
    <div class="box-footer clearfix">
      <%= custom_paginator @carts, 'no-margin pull-right' %>
    </div>
  </div>
</section>
