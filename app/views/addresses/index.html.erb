<section class="content-header">
  <h1>Listing Addresses</h1>
</section>
<section class="content">
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">
        <%= link_to '<i class="fa fa-plus"></i> New'.html_safe, new_address_path, class: 'btn btn-xs btn-flat bg-gray' %>
      </h3>
      <div class="box-tools">
        <div class="input-group input-group-sm" style="width: 150px;">
          <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

          <div class="input-group-btn">
            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
          </div>
        </div>
      </div>
    </div><!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Street</th>
          <th>City</th>
          <th>State</th>
          <th>Zipcode</th>
          <th>Phone number</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @addresses.each do |address| %>
            <tr>
              <td><%= address.street %></td>
              <td><%= address.city %></td>
              <td><%= address.state %></td>
              <td><%= address.zipcode %></td>
              <td><%= address.phone_number %></td>
              <td class="actions">
                <div>
                  <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_address_path(address),
                              class: 'btn btn-flat btn-xs bg-blue' %>
                  <%= link_to '<i class="fa fa-trash"></i>'.html_safe, address, method: :delete,
                              data: {confirm: 'Are you sure?'}, class: 'btn btn-flat btn-xs bg-red' %>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div><!-- /.box-body -->
  </div>
</section>
