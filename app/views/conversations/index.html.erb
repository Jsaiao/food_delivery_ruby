<section class="content-header">
  <h1>Listing Users</h1>
</section>
<section class="content">
  <div class="box">
    <div class="box-header with-border">
      <h3 class="box-title">
      </h3>
      <div class="box-tools">
        <div class="input-group input-group-sm" style="width: 150px;">
        </div>
      </div>
    </div><!-- /.box-header -->
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <thead>
        <tr>
          <th style="width: 10px"></th>
          <th>Email</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= %></td>
              <td><%= user.email %></td>
              <td><%= user.role_name %></td>
              <td class="actions">
                <div>
                  <%= link_to '<i class="fa fa-comment-o "></i>'.html_safe, 'javascript:;', class: 'btn btn-flat btn-xs bg-yellow start-conversation', data: {sid: current_user.id, rip: user.id} %>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div><!-- /.box-body -->
    <div class="box-footer clearfix">
      <%#= will_paginate @users, 'no-margin pull-right' %>
    </div>
  </div>
</section>
